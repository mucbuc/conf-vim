echo "marks_bashrc"

alias ll='ls -alh'
alias ls='ls -lh'
alias sudo='sudo '

function gitbranch() {
  if [ -d ".git" ]
  then
    git rev-parse --abbrev-ref HEAD
  else 
    echo "."
  fi
}

function gitouch() {
  touch "$1" && git add "$1"
}

function setColor() {
  tput setaf $1
}

function resetColor() {
  tput sgr0
}

export PS1="$(setColor 6)\w$(setColor 5)\$(gitbranch)$(resetColor)$"
