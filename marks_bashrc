echo "marks_bashrc"

alias ll='ls -alh'
alias ls='ls -lh'
alias sudo='sudo '

function setColor() {
  tput setaf $1
}

function resetColor() {
  tput sgr0
}

function gitbranch() {
  if [ -d ".git" ]
  then
    echo -n "|"
    setColor 5
    git rev-parse --abbrev-ref HEAD | head -c -1
    if git status -s | grep -m 1 -q -s .
    then
      echo -n "*"
    fi
  fi
}

function gitouch() {
  touch "$1" && git add "$1"
}

export PS1="$(setColor 6)\w$(resetColor)\$(gitbranch)$(resetColor)$ "
